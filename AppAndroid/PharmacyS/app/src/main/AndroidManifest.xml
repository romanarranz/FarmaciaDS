<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hugoroman.pharmacys">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hugoroman.pharmacys.MainActivity" />
        </activity>

        <activity
            android:name=".SignUpActivity"
            android:parentActivityName=".LoginActivity"
            android:noHistory="true"
            android:excludeFromRecents="true" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hugoroman.pharmacys.LoginActivity" />
        </activity>

        <!--<activity android:name=".LoginActivity" android:theme="@style/AppTheme" />
        <activity android:name=".SignUpActivity" android:theme="@style/AppTheme" />-->

    </application>

</manifest>